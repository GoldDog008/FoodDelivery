<Application x:Class="Ipz_client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ipz_client"
             xmlns:view="clr-namespace:Ipz_client.Views"
             xmlns:viewmodels="clr-namespace:Ipz_client.ViewModel">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewmodels:RegistrationViewModel}">
            <view:RegistrationWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <view:LoginWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:NewOrderViewModel}">
            <view:NewOrderWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ProfileViewModel}">
            <view:ProfileWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AllOrdersViewModel}">
            <view:AllOrdersWindow/>
        </DataTemplate>

    </Application.Resources>
</Application>
